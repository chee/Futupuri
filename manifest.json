{
	"manifest_version": 2,
	"name": "Futupuri",
	"description": "Photo booth camera for Chrome and ChromeOS",
	"version": "1.0.2",
	"app": {
		"background": {
			"scripts": [ "js/background.js" ]
		}
	},
	"offline_enabled": true,
	"permissions": [
		"storage",
		"unlimitedStorage",
		"videoCapture",
		"fileSystem",
		"fileSystem.write"
	],
	"icons": {
		"16": "png/16.png",
		"128": "png/128.png"
	}
}
